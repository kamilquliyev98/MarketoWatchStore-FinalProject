@model IEnumerable<Tag>
@{
    ViewData["Title"] = "Tags";
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
}

<main id="main" class="main">

    <div class="row justify-content-between align-items-center">
        <div class="col-md-3">
            <div class="pagetitle">
                <h1>Tags</h1>
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-area="manage" asp-controller="dashboard" asp-action="index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Tags</li>
                    </ol>
                </nav>
            </div>
            <!-- End Page Title -->
        </div>
        <div class="col-md-3">
            <form class="form-group">
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label for="status" class="col-form-label">Show:</label>
                    </div>
                    <div class="col-auto">
                        <select class="form-select" id="status" name="status">
                            @switch (ViewBag.Status)
                            {
                                case "active":
                                    <option value="all">All</option>
                                    <option value="active" selected>Active</option>
                                    <option value="deleted">Deleted</option>
                                    break;
                                case "deleted":
                                    <option value="all">All</option>
                                    <option value="active">Active</option>
                                    <option value="deleted" selected>Deleted</option>
                                    break;
                                default:
                                    <option value="all" selected>All</option>
                                    <option value="active">Active</option>
                                    <option value="deleted">Deleted</option>
                                    break;
                            }

                        </select>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-info">Filter</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">
            <div class="d-grid">
                <a asp-area="manage" asp-controller="@controller" asp-action="create" asp-route-page="@ViewBag.CurrentPage" asp-route-status="@ViewBag.Status" class="btn btn-success" type="button">Create</a>
            </div>
        </div>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                        </h5>

                        <!-- Products Table -->
                        <div id="table" class="table-responsive">
                            @await Html.PartialAsync("_TagsTablePartial", Model)
                        </div>
                        <!-- End Table -->
                        <!-- Pagination -->
                        <nav>
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                                    <a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="1" asp-route-status="@ViewBag.Status" aria-label="First" data-bs-toggle="tooltip" data-bs-placement="left" title="" data-bs-original-title="First page">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                <li class="page-item @(ViewBag.CurrentPage <= 1 ? "disabled" : "")">
                                    <a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-status="@ViewBag.Status" aria-label="Previous" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Previous">
                                        <span aria-hidden="true">&lsaquo;</span>
                                    </a>
                                </li>

                                @if (ViewBag.CurrentPage == ViewBag.PageCount && ViewBag.CurrentPage > 2)
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="@(ViewBag.CurrentPage - 2)" asp-route-status="@ViewBag.Status">@(ViewBag.CurrentPage - 2)</a></li>
                                }
                                @if (ViewBag.CurrentPage > 1)
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-status="@ViewBag.Status">@(ViewBag.CurrentPage - 1)</a></li>
                                }

                                <li class="page-item active" aria-current="page"><a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="@(ViewBag.CurrentPage)" asp-route-status="@ViewBag.Status">@(ViewBag.CurrentPage)</a></li>

                                @if (ViewBag.CurrentPage < ViewBag.PageCount)
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-status="@ViewBag.Status">@(ViewBag.CurrentPage + 1)</a></li>
                                }
                                @if (ViewBag.CurrentPage == 1 && (ViewBag.CurrentPage + 2) <= ViewBag.PageCount)
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="@(ViewBag.CurrentPage + 2)" asp-route-status="@ViewBag.Status">@(ViewBag.CurrentPage + 2)</a></li>
                                }

                                <li class="page-item @(ViewBag.CurrentPage >= ViewBag.PageCount ? "disabled" : "")">
                                    <a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-status="@ViewBag.Status" aria-label="Next" data-bs-toggle="tooltip" data-bs-placement="top" title="" data-bs-original-title="Next">
                                        <span aria-hidden="true">&rsaquo;</span>
                                    </a>
                                </li>
                                <li class="page-item @(ViewBag.CurrentPage >= ViewBag.PageCount ? "disabled" : "")">
                                    <a class="page-link" asp-controller="@controller" asp-action="index" asp-route-page="@ViewBag.PageCount" asp-route-status="@ViewBag.Status" aria-label="Last" data-bs-toggle="tooltip" data-bs-placement="right" title="" data-bs-original-title="Last page">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                        <!-- End Pagination -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
<!-- End #main -->

@section CSS{
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
}

@section JS{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/manage/assets/js/custom.js" asp-append-version="true"></script>
}