@model ServicePolicy
@{
    ViewData["Title"] = "Edit service policy";
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Edit service policy</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="manage" asp-controller="dashboard" asp-action="index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-area="manage" asp-controller="@controller" asp-action="index">Service Policies</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"></h5>

                        <!-- Form -->
                        <form class="row g-3" novalidate="" method="post" enctype="multipart/form-data" autocomplete="off">
                            <div class="col-md-12">
                                <label asp-for="ImageFile" class="form-label">Image</label>
                                <input asp-for="ImageFile" class="form-control" accept="image/png">
                                <span asp-validation-for="ImageFile" class="text-danger"></span>
                                <small class="form-text text-muted">
                                    <ul>
                                        <li>Content type: "image/png"</li>
                                        <li>Max size: 5 KB</li>
                                    </ul>
                                </small>
                                <div class="my-2">
                                    <p>Current Image:</p>
                                    <div style="width:20%">
                                        <img class="img-fluid" src="~/assets/images/service-policies/@Model.Image" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Title" class="form-label">Title *</label>
                                <input asp-for="Title" class="form-control" required>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Description" class="form-label">Description *</label>
                                <textarea asp-for="Description" class="form-control" required></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-12 d-grid gap-2 mt-3">
                                <button class="btn btn-success" type="submit">Save changes</button>
                                <a asp-area="manage" asp-controller="@controller" asp-action="index" class="btn btn-info">Go back</a>
                            </div>
                        </form>
                        <!-- End Form -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
<!-- End #main -->

@section JS{
    <partial name="_ValidationFormScriptPartial">
}