@model Setting 
@{
    ViewData["Title"] = "Settings";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Settings</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="manage" asp-controller="dashboard" asp-action="index">Dashboard</a></li>
                <li class="breadcrumb-item active">Settings</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"></h5>

                        <!-- Settings Table -->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <tbody class="align-middle">
                                    <tr>
                                        <th>Logo</th>
                                        <td>
                                            <img src="~/assets/images/logo/@Model.Logo" alt="logo" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>@Model.Email1</td>
                                    </tr>
                                    <tr>
                                        <th>Additional Email (optional)</th>
                                        <td>@Model.Email2</td>
                                    </tr>
                                    <tr>
                                        <th>Phone</th>
                                        <td>@Model.Phone1</td>
                                    </tr>
                                    <tr>
                                        <th>Additional Phone (optional)</th>
                                        <td>@Model.Phone2</td>
                                    </tr>
                                    <tr>
                                        <th>Address</th>
                                        <td>@Model.Address</td>
                                    </tr>
                                    <tr>
                                        <th>Offer</th>
                                        <td>@Model.Offer</td>
                                    </tr>
                                    <tr>
                                        <th>Facebook</th>
                                        <td>@Model.Facebook</td>
                                    </tr>
                                    <tr>
                                        <th>Instagram</th>
                                        <td>@Model.Instagram</td>
                                    </tr>
                                    <tr>
                                        <th>Twitter</th>
                                        <td>@Model.Twitter</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <!-- End Table -->

                        <div class="d-grid gap-2 mt-3">
                            <a asp-area="manage" asp-controller="@(this.ViewContext.RouteData.Values["controller"].ToString())" asp-action="update" class="btn btn-warning" type="button">Edit</a>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </section>

</main><!-- End #main -->