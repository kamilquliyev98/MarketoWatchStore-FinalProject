@model FAQ
@{
    ViewData["Title"] = "Edit FAQ";
    string controller = this.ViewContext.RouteData.Values["controller"].ToString();
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Edit FAQ</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="manage" asp-controller="dashboard" asp-action="index">Dashboard</a></li>
                <li class="breadcrumb-item"><a asp-area="manage" asp-controller="@controller" asp-action="index">FAQ</a></li>
                <li class="breadcrumb-item active">Edit</li>
            </ol>
        </nav>
    </div>
    <!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"></h5>

                        <!-- Form -->
                        <form class="row g-3" novalidate="" method="post" autocomplete="off">
                            <div class="col-md-12">
                                <label asp-for="Question" class="form-label">Question *</label>
                                <input asp-for="Question" class="form-control" required>
                                <span asp-validation-for="Question" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Answer" class="form-label">Answer *</label>
                                <textarea asp-for="Answer" class="form-control" rows="5" required></textarea>
                                <span asp-validation-for="Answer" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check">
                                    <label asp-for="IsShared" class="form-label">Tick, if you want to share</label>
                                    <input asp-for="IsShared" class="form-check-input">
                                    <span asp-validation-for="IsShared" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 d-grid gap-2 mt-3">
                                <button class="btn btn-success" type="submit">Save changes</button>
                                <a asp-area="manage" asp-controller="@controller" asp-action="index" class="btn btn-info">Go back</a>
                            </div>
                        </form>
                        <!-- End Form -->

                    </div>
                </div>

            </div>
        </div>
    </section>

</main>
<!-- End #main -->

@section JS{
    <partial name="_ValidationFormScriptPartial">
}
